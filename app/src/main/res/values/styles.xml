<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo personalizado para el TextInputLayout -->
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#0977bd</item>
        <item name="hintTextAppearance">@style/MyHintText</item>
    </style>

    <!-- Estilo personalizado para el borde del input -->
    <style name="MyHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#0977bd</item>
    </style>

    <style name="btnStyle">
        <item name="android:background">#0977bd</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="MiEstilo">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:radius">50dp</item>
    </style>



    <string name="fa_icon_star">&#xf005;</string>


</resources>